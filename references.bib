@article{Keisuke2019,
author = {Suzuki, Keisuke and Toyao, Takashi and Maeno, Zen and Takakusagi, Satoru and Shimizu, Ken-ichi and Takigawa, Ichigaku},
title = {Statistical Analysis and Discovery of Heterogeneous Catalysts Based on Machine Learning from Diverse Published Data},
journal = {ChemCatChem},
volume = {11},
