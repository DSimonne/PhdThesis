file = {:home/david/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Vilekar, Fishtik, Datta - 2012 - The peculiar catalytic sequence of the ammonia decomposition reaction and its steady-state kinetics.pdf:pdf},
issn = {00092509},
journal = {Chemical Engineering Science},
keywords = {Ammonia decomposition,Fuel cells,Hydrogen production,Microkinetics,Quasi-steady state analysis,Rate-limiting step},
pages = {333--344},
publisher = {Elsevier},
title = {{The peculiar catalytic sequence of the ammonia decomposition reaction and its steady-state kinetics}},
volume = {71},
year = {2012}
