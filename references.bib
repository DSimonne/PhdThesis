file = {:home/david/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Rebrov, De Croon, Schouten - 2002 - Development of the kinetic model of platinum catalyzed ammonia oxidation in a microreactor.pdf:pdf},
isbn = {3140244665},
issn = {13858947},
journal = {Chemical Engineering Journal},
keywords = {Ammonia oxidation,Kinetic model,Microreactor,Navier-Stokes,Platinum},
number = {1-2},
pages = {61--76},
title = {{Development of the kinetic model of platinum catalyzed ammonia oxidation in a microreactor}},
volume = {90},
