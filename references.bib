number = {8},
pages = {4818--4824},
publisher = {American Chemical Society},
title = {{Coherent X-ray Imaging of CO-Adsorption-Induced Structural Changes in Pt Nanoparticles: Implications for Catalysis}},
volume = {2},
year = {2019}
}

@article{Leake2017,
