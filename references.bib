issn = {00396028},
journal = {Surface Science},
keywords = {Atom-solid interactions,Atomic oxygen,Desorption,Metal-oxide interfaces,Oxidation,Platinum,Single crystal surfaces},
number = {1},
pages = {235--246},
title = {{Oxidation of Pt(1 0 0)-hex-R0.7° by gas-phase oxygen atoms}},
