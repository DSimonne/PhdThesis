journal = {ACS Catalysis},
keywords = {Co3O4,CoOOH,electrocatalysts,operando studies,oxygen evolution reaction,surface X-ray diffraction},
number = {5},
pages = {3811--3821},
title = {{Operando Surface X-ray Diffraction Studies of Structurally Defined Co3O4 and CoOOH Thin Films during Oxygen Evolution}},
volume = {9},
year = {2019}
}

