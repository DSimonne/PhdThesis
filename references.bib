   author = {Latychevskaia, Tatiana and Longchamp, Jean-Nicolas and Fink, Hans-Werner},
   month = 12,
   year = {2012},
   keywords = {Diffraction, Holography, Image reconstruction techniques, X-ray imaging},
   pages = {28871--28892},
   file = {Latychevskaia et al. - 2012 - When holography meets coherent diffraction imaging.pdf:/Users/marieingridrichard/Zotero/storage/CDBIF7QA/Latychevskaia et al. - 2012 - When holography meets coherent diffraction imaging.pdf:application/pdf;Opt. Express Snapshot:/Users/marieingridrichard/Zotero/storage/TH4EGHX6/abstract.html:text/html}
